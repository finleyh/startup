
"set cursorline instead of highlights
set cursorline

" set number lines
set number

" enable folding

set foldmethod=indent
set foldlevel=99


" Enable folding with the spacebar
nnoremap <space> za


" setting the proper tabstops
set tabstop=4
set softtabstop=4
set shiftwidth=4
set textwidth=79
set expandtab
set autoindent
set fileformat=unix
